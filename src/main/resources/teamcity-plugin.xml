<?xml version="1.0" encoding="UTF-8"?>
<teamcity-plugin xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:noNamespaceSchemaLocation="urn:schemas-jetbrains-com:teamcity-plugin-v1-xml">
    <info>
        <name>jvmMonitorPlugin</name>
        <display-name>JVM Monitor Plugin</display-name>
        <version>@VERSION@</version>
        <description>
            Collects JVM related metrics for any JVM running during the build and publishes them as artifacts.
            VCS Revision: @VCS_REVISION@, Build Number: @BUILD_NUMBER@
        </description>
        <email>rod.n.mackenzie@gmail.com</email>
        <vendor>
            <name>rodm</name>
            <url>https://github.com/rodm/teamcity-jvm-monitor-plugin</url>
        </vendor>
    </info>
    <deployment use-separate-classloader="false"/>
</teamcity-plugin>
